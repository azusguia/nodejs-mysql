<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head.ejs %>
  <script src="js/create.js"></script>
  <link rel="stylesheet" href="css/create.css">
</head>
<body>
  <header id="menu">
    <% include ../../partials/header.ejs %>
  </header>
  
  <main id="container">
    <% include ../../partials/crud.ejs %>    
    <div id="content">
        <div class="input-group create">
          <h5>Create new Customer...</h5>

          <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" id="inputName" placeholder="Enter Name">
          </div>

          <div class="form-group">
            <label for="inputUser">User</label>
            <input type="text" class="form-control" id="inputUser" placeholder="Enter User">
          </div>

          <div class="form-group">
              <label for="inputAge">Age</label>
              <input type="number" class="form-control" id="inputAge" placeholder="Enter Age">
          </div>

          <button type="submit" onclick="createCustomer()" class="btn btn-primary">Create</button>
        </div>
    </div>
  </main>

  <footer id="footer">
    <%include ../../partials/footer.ejs %>
  </footer>
</body>
</html>
